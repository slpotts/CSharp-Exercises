@model CSharpExercises.Models.TotalAliceViewModel

@{
    ViewBag.Title = "TotalAlice";
}

<h2>Find Word</h2>

<form action="@Url.Action("TotalAlice", "Exercises")" method="post" enctype="multipart/form-data">
    <input type="text" name="findWord" value="@if (Model != null) {@Model.findWord}" /><br /><br />

    <input name="fileUpload" type="file" /><br />

    <p>
        <label>Result: </label><input type="number" name="total" value="@if (Model != null) {@Model.total}" disabled />
    </p><br />
    <button type="submit">Count Alice</button>
</form>

