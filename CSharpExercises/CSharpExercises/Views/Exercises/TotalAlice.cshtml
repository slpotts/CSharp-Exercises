@model CSharpExercises.Models.TotalAliceViewModel

@{
    ViewBag.Title = "TotalAlice";
}

<h2>TotalAlice</h2>

<h5>Enter some text:</h5>
<form action="@Url.Action("TotalAlice", "Exercises")" method="post">
    <textarea name="text" style="height:300px; width:200px" value="@if (Model != null) { @Model.text}"></textarea><br /><br />
    <p>
        <label>Result: </label><input type="number" name="total" value="@if (Model != null) {@Model.total}" disabled/>
    </p><br />
    <button type="submit">Count Alice</button>
</form>

