@model CSharpExercises.Models.SumViewModel

@{
        ViewBag.Title = "Sum";
}

<h2>Sum</h2>



<form action="@Url.Action("Sum", "Exercises")" method="post">
    <label>Input number: </label><input type="number" name="number1" value="@if (Model != null) { @Model.number1}" /><br />
    <label>Input number: </label><input type="number" name="number2" value="@if (Model != null) { @Model.number2}" /><br />
    <label>Sum: </label><input type="number" name="sum" value="@if (Model != null) {@Model.sum}" disabled /><br />
    <button type="submit">Get Sum</button>
</form>

